<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="zju.edu.als.dao.SurgeryDao">
    <sql  id="SurgeryColumn">
        id,surgeryNo,patient,patientId,doctor,doctorId,description,state,alarmPerson,lastAlarm
    </sql>
    <resultMap id="Surgery" type="zju.edu.als.domain.surgery.Surgery" >
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="surgeryNo" property="surgeryNo" jdbcType="VARCHAR" />
        <result column="patient" property="patient" jdbcType="VARCHAR" />
        <result column="patientId" property="patientId" jdbcType="VARCHAR" />
        <result column="doctor" property="doctor" jdbcType="VARCHAR"/>
        <result column="doctorId" property="doctorId" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="state" property="state" jdbcType="INTEGER"/>
        <result column="alarmPerson" property="alarmPerson" jdbcType="VARCHAR"/>
        <result column="lastAlarm" property="lastAlarm" jdbcType="BIGINT"/>
    </resultMap>
    <insert id="insertSurgery" parameterType="zju.edu.als.domain.surgery.Surgery">
        INSERT INTO
        surgery(
          surgeryNo,
          patient,
          patientId,
          doctor,
          doctorId,
          description,
          state,
          alarmPerson,
          lastAlarm
          )
        VALUE (
          #{surgery.surgeryNo},
          #{surgery.patient},
          #{surgery.patientId},
          #{surgery.doctor},
          #{surgery.doctorId},
          #{surgery.description},
          #{surgery.state},
          #{surgery.alarmPerson},
          #{surgery.lastAlarm}
        )
    </insert>
    <update id="updateSurgery" parameterType="zju.edu.als.domain.surgery.Surgery">
        UPDATE
        surgery
        SET
        patient=#{surgery.patient},
        patientId=#{surgery.patient},
        doctor=#{surgery.patient},
        doctorId=#{surgery.patient},
        description=#{surgery.patient},
        state=#{surgery.patient},
        alarmPerson=#{surgery.patient},
        lastAlarm=#{surgery.patient}
        WHERE
        surgeryNo=#{surgery.surgeryNo}
    </update>

    <update id="endSurgery" parameterType="java.lang.String">
        UPDATE
        surgery
        SET
        state = 3
        WHERE
        surgeryNo = #{surgeryNo}
    </update>
    <select id="selectSurgeryBySurgeryNo"  resultMap="Surgery">
        SELECT
        <include refid="SurgeryColumn"/>
        FROM
        surgery
        WHERE
        surgeryNo = #{surgeryNo}
        ORDER BY
        id
    </select>
    <select id="selectExecutingSurgeryBySurgeryNoList" parameterType="java.util.List">
        SELECT
        <include refid="SurgeryColumn"/>
        FROM
        surgery
        WHERE
        surgeryNo IN
        <foreach collection="surgeryNoList" item="surgeryNo" index="index" open="(" close=")" separator=",">
           #{surgeryNo}
        </foreach>
    </select>
    <select id="selectAllSurgery" >
        SELECT
        <include refid="SurgeryColumn"/>
        FROM
        surgery
        WHERE
        1=1
    </select>
    <select id="selectSurgeryByState" parameterType="java.lang.Integer">
        SELECT
        <include refid="SurgeryColumn"/>
        FROM
        surgery
        WHERE
        state = #{state}
    </select>


</mapper>